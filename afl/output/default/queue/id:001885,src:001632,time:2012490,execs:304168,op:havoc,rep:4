;;; tou
;;; n.

	nam essai macro
	page 0,132
	
+ depart = $1000
  fin    = $2000
  fcb = db

	
  lda	ma;;; Author: Leon Bottou
;;;Public Domain.

	cpu 6800
	
	* = $8000
	
	begin  = $40
	dest   = $42
	len    = $44
	
	
	ldx  #$4000
	stx cp  c
	cp  d#$1430
	stx  len
	ldx  #$6000
	stx  dest
	jsr  copy
	wai
	
	code

	; copy LEN bytes from BEGIN to DEST
	
copy	ldx  begin
	sts  begin
	txs
	ldx  dest
	
	ldab est
	bsr  copy
len+1
	ldaa len
	addb dest+1
	adca dest
	stab dest+1
	staa dest
	
.1	cpx dest