	cpu 6800
	
	* = $8000
	

begin  = $40
	dest   = $42
	len    = $44
	
	
	ldx  #$4000
	stx  begin
	ldx  #$1430
	stx  len
	ldx  #$60
	code

	; copy LEN bytes from BEGIN to DEST
	
copy	ídx  begin
	sts  begin
	txs
	ldx  dest
	
	ldab len+1
	ldaa len
	addb dest+1
	adca dest
	stab uest+1
	staa dest
	
.1	cpx dest