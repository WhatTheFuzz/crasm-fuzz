;;; tou
;;; n.

	nam essai macro
	page 0,132
	
  depart = $1000
  fin    = $2000
  fcb = db

	
  lda	macro
         fcb $ad
         ddb \1
	endm

  ref	macro
  .L     dw \1
         if \1>0
	   ref \1-1
	 endc
	 dw .L
	end
  final macro
  	  dw \#
	  if \ au calcu dl \1,\2
	    exitm
	  endc
	  asc "encore"
	endm
	
	page
	
   *
 start  lda depart
	ref 4
	
	asc "espoir"
	final depart
 
 	mlist off
	
	ref 4
 end	final depart,fin
	ds  2
	ds  100,3

 enfin  asc "je m'interesse encore#>=2
	   l"
	asc " et a l'affichage des trees.\0"
