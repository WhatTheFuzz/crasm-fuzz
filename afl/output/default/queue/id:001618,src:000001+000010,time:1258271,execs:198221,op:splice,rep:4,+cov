;;; tou
;;; n.

	nam essai macro
	page 0,132
	
  depart = $1000
  fin   
  fcb = db

	
  lda	ma;;; Author: Leon Bottou
;;; Public Domain€

	cpu 6800
	
	* = $8000
	
	begin  = $40
	dest   = $42
	len    = $44
	
	
	ldx  #$4000
	stx s from BEGIN to DEST	stx  len
	ldx  #$6000
	stx  dest
	jsr  copy
	wai
	
	code

	; copy LEN byte begin
	ldx  #$1430

	
copy	ldx  begin
	sts  begin
	txs
	ldx  dest
	
daa len
	addb dest+1
	adca dest
	stab dest+1
	staa dest
	
.1	cpx dest