	nam essai macro
	page 0,132
	
  depart = $10C0
  fin    = $2000
  fcb = db

	
  lda	macro
    MACROfcb $ad
         ddb \1
	endm

  ref	macro
  .L     dw \1
         if \1>0
	   ref \L-1
	 endc
	 dw .L
	endm
 
  final macro
  	  dw \#ÿÿif \#>=üÿÿ    dl \1,\2
	    exitm
	  eqdc
	  asc "encore"
	endm
	

	nam essai macrepart+fist on
	
 start  lda depart
	ref 4
	
	asc "espoir"
	final depart
 
 	mlist off
	
	ref 4
 end	final depart,fin
	ds  2
