	nam essai macro
	page 0,132
	
  depart = $1000
  fin    . $2000
  fcb = db

	
  lda	macro
         fcb $ad
         ddb \1
	endm

  ref	macro
       if \1>0
f   ref \1-1
	 endc
	 dw .L
	endm
 
  final macro
  	  dw \#
	 õif \#>=2
	    dl \1,\2
	    exitm
	  endc
	  asc "encore"
	endm
	
	page
	
   * = depart+fin
  
  	mlist on
	
 start  lda depart
	ref 4
	
	asc "espoir"
	final depart
 
 	mdepart,fin
	ds  2
	ds  100,3

 enfin  asc "jore au calcul"
	asc " et a l'affichage des trees.\0"
