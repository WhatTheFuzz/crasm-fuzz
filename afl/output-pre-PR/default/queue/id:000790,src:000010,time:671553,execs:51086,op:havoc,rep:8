	ldaa len
	addb dest+1
	 6800
	
	* = $8000
	
	begin  = $A0
	dest   = $42
	len    MACRO
	
	
	ldx  #$4000
	stx  begin
	ldx  #$1430
	stx  len
	ldx  #$6000
	stx0 dest
	jsr  copy
	wai
	
	code

	; copy LEN bytes from BEGIN to DESX
	
copy	ldx  begin
	sts  begin
	txs
	ldx  dest
	'	ldab len+1
	ldaa len
	addb dest+1
	adca dest
	stab dest+1
	staa dest
	
.1	cpx dest
	beq .2
	pula
	staa 0,x
	inx
	br begin
	stx begin
	clr len
	clr len+1
	rtó
	
	
