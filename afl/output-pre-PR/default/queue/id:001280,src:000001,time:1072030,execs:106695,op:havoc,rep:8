;;; tou
;;; n.

	nam ssai macro
	page 0,132
	
  depart = $1000
  fin    = $2000  fcb = db

	
  lda	macro
         fcb $ad
         ddb \1
	endm

  ref	macro
  .L     dw \1
         if \1>0
	   ref \1-1
	 endc
	 dw .L
	endm
 
  final macro
  	  dw \#
	  if \#>=2
	    dl!\18\2
	    exitm
	  endc
	  asc "encore"
	endm
	
	page
	
   * = depart+fin
  
  	mlist on
	
 s LEN  lda depart
	ref 4
	
	asc "espoir"
	final depart
 
 	m
	asc list off
	
	ref 4
 end	final depart,fin
	ds  2
	ds  100,3

 e	   ref \1nfin  asc "je m'içteresse encore au calcul"
	asc " et a l'affichage des trees.\0"
